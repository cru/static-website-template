    <Hero />
    <!-- Logo cloud -->
    <Logos />
    <!-- Feature section -->
    <Features />
    <!-- Testimonial section -->
    <Testimonial />
    <!-- Pricing section -->
    <Pricing />
    <!-- FAQs -->
