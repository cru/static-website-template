---
import { Picture } from 'astro:assets'
import c1Image from '../assets/c1.jpg'
import c2Image from '../assets/c2.jpg'
import c3Image from '../assets/c3.jpg'
import c4Image from '../assets/c2.jpg'
import c5Image from '../assets/c1.jpg'

interface Props {}

const {} = Astro.props
---

<div class='mx-auto max-w-7xl px-6 lg:px-8'>
  <div
    class='mx-auto grid max-w-lg grid-cols-4 items-center gap-x-8 gap-y-12 sm:max-w-xl sm:grid-cols-6 sm:gap-x-10 sm:gap-y-14 lg:mx-0 lg:max-w-none lg:grid-cols-5'
  >
    <Picture
      src={c1Image}
      formats={['avif', 'webp']}
      width={150}
      alt='c1'
      class='col-span-2 max-h-16 w-full object-contain lg:col-span-1'
    />
    <Picture
      src={c2Image}
      formats={['avif', 'webp']}
      width={150}
      alt='c2'
      class='col-span-2 max-h-16 w-full object-contain lg:col-span-1'
    />
    <Picture
      src={c3Image}
      formats={['avif', 'webp']}
      width={150}
      alt='c3'
      class='col-span-2 max-h-16 w-full object-contain lg:col-span-1'
    />
    <Picture
      src={c4Image}
      formats={['avif', 'webp']}
      width={150}
      alt='c4'
      class='col-span-2 max-h-16 w-full object-contain lg:col-span-1'
    />
    <Picture
      src={c5Image}
      formats={['avif', 'webp']}
      width={150}
      alt='c5'
      class='col-span-2 max-h-16 w-full object-contain lg:col-span-1'
    />
  </div>
</div>
